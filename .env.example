# No provider API key needed. Public gateway.
SHARED_SECRET=your-shared-secret

# Primary and optional secondary base URLs for the public gateway:
OLLAMA_BASE=https://ollamafreeapi.onrender.com
OLLAMA_ALT_BASE=

# Endpoint path (OpenAI-compatible):
OLLAMA_PATH=/chat/completions

# Generation settings
MODEL_NAME=llama3-8b
TEMP=0.6
MAX_TOKENS=160

# Timeouts / retries
ATTEMPT_TIMEOUT_SECS=6.0
REQ_TIMEOUT_SECS=25
MAX_RETRIES=2
RETRY_BACKOFF_SECS=0.8

HOST=0.0.0.0
